<%= form_for @pet do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_area :breed, class: "form-control", placeholder: "Breed" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Pet", class: "btn btn-block btn-default" %>
  </div>
<% end %>
<%= link_to "Back to List", pets_path, method: :get %>